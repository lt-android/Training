<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="200dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioG_animals"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:checkedButton="@+id/radioBtn_bird"
            android:gravity="center"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioBtn_bird"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/bird" />

            <RadioButton
                android:id="@+id/radioBtn_cat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/cat" />

            <RadioButton
                android:id="@+id/radioBtn_dog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/dog" />

            <RadioButton
                android:id="@+id/radioBtn_rabbit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/rabbit" />

            <RadioButton
                android:id="@+id/radioBtn_pig"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/pig" />
        </RadioGroup>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="TODO"
        android:scaleType="center"
        app:srcCompat="@drawable/bird" />

</LinearLayout>